<!-- 因为 canvas-id 与前一个 canvas 重复，该 canvas 不会显示，并会发送一个错误事件到 AppService -->

<map
  id="map"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  scale="{{scale}}"
  bindcontroltap="controltap"
  bindregionchange="regionchange" 
  markers="{{markers}}"
  bindmarkertap="markertap"
  bindtap="clearInfo"
  show-location
  style="width: 100vw; height: 100vh;"
>
  <cover-view class="cover" >
    <cover-image src="{{headImage}}" bindtap="" class="profile"></cover-image>
    <cover-view class='search' style='height:80rpx;width:530rpx;float:left;margin-top:10rpx;margin-bottom:10rpx;'>
      <input style='height:100%;padding-left:5rpx;' class='' placeholder='搜索快点寄存点'></input>
    </cover-view>
    <cover-image src="../../image/list.png" bindtap ='getShopList' class="list"></cover-image>
  </cover-view>
  <cover-image class="fixed" src="../../image/nail.png"></cover-image>

  <cover-image class="localed"  style="left:5vw" src='../../image/local.png' bindtap='toLocation'></cover-image>
  <!-- <cover-view class="address-add" wx:if="{{InMap}}" style="left:15vw">存的按钮</cover-view> -->
  <cover-image class="localed"  style="right:5vw" src='../../image/service.png' bindtap=''></cover-image>
  <!-- <cover-view class="address-add" wx:if="{{InMap}}" style="right:15vw">取的按钮</cover-view> -->
  <cover-view class="localed-button">扫码存取</cover-view>
    <cover-view class="info-add"  wx:if="{{GetInfo}}" style="left:5vw" bindtap='goToShopDetail'>
    <!-- wx:if="{{GetInfo}}" -->
    <cover-view style='width:100%;height:80rpx;line-height:80rpx;background:#2c2c2c;color:white;text-align:center;'>{{shopName}}</cover-view>
    <cover-view style='width:100%;height:80rpx;line-height:80rpx;text-align:left;padding-left:10rpx;font-size:24rpx;'>地址：{{shopAddress}}</cover-view>
    <cover-view style='width:100%;height:30rpx;line-height:30rpx;text-align:left;padding-left:10rpx;font-size:24rpx;'>工作时间：{{time}}</cover-view>
    <!-- <cover-view style='width:50%;height:200rpx;text-align:center;'> {{shopAddress}}</cover-view> -->
    <cover-view style='text-align:center;height:60rpx;line-height:60rpx;'>
    <cover-view class='cu-tag bg-{{backpackColor}} light sm round'>背包：{{backpack}}</cover-view>
    <cover-view class='cu-tag bg-{{luggageColor}} light sm round'>旅行箱：{{luggage}}</cover-view>
    </cover-view>
  </cover-view> 
</map>